[sqlfluff]
# SQL dialect
dialect = mysql

# Templater (use jinja if using template variables, otherwise raw)
templater = raw

# Exclude specific paths
exclude_rules = None

# File encoding
encoding = utf-8

# Max line length
max_line_length = 120

[sqlfluff:indentation]
# Indentation configuration
indent_unit = space
tab_space_size = 4
indented_joins = False
indented_using_on = True
template_blocks_indent = True

[sqlfluff:rules]
# Capitalize keywords
capitalisation_policy = upper

# Trailing commas
allow_scalar = True

# L001: Unnecessary trailing whitespace
# L002: Mixed Tabs and Spaces in single whitespace
# L003: Indentation not consistent with previous lines
# L004: Incorrect indentation type
# L005: Commas should not have whitespace directly before them
# L006: Operators should be surrounded by a single space
# L007: Operators near newlines should be after, not before the newline
# L008: Commas should be followed by a single whitespace
# L009: Files must end with a single trailing newline
# L010: Keywords must be consistently upper or lower case
# L011: Implicit aliasing of table not allowed
# L012: Implicit aliasing of columns not allowed
# L013: Column expression without alias
# L014: Unquoted identifiers must be consistently lower case
# L016: Line is too long
# L019: Leading commas are not allowed
# L031: Avoid aliases in from clauses and join conditions
# L042: Join clauses should not contain subqueries

[sqlfluff:rules:L010]
# Keywords should be upper case
capitalisation_policy = upper

[sqlfluff:rules:L014]
# Unquoted identifiers should be lower case
extended_capitalisation_policy = lower

[sqlfluff:rules:L030]
# Function names should be upper case
capitalisation_policy = upper

[sqlfluff:rules:L040]
# Null comparisons (use IS NULL, not = NULL)
# This rule is enabled by default

[sqlfluff:rules:L063]
# Data types should be upper case
extended_capitalisation_policy = upper
